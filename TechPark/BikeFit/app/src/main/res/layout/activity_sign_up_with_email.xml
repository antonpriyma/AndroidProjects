<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_sign_up"
        style="@style/toolbar"
        navigationIcon="?attr/homeAsUpIndicator"
        xmlns:android="http://schemas.android.com/apk/res/android" />
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpWithEmailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_alignLeft="@id/email_register_edit_text"
        android:id="@+id/email_register_text_view"
        android:layout_marginTop="8dp"
        android:textSize="12dp"/>

    <EditText
        android:layout_margin="8dp"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_register_edit_text"
        android:hint="@string/example_bike_fit"
        android:layout_below="@id/email_register_text_view"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_string"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/password_register_edit_text"
        android:id="@+id/password_register_text_view"
        android:layout_below="@id/email_register_edit_text"
        android:textSize="12dp"/>

    <EditText
        android:layout_margin="8dp"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_register_edit_text"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_below="@id/password_register_text_view"
        />

    <Button
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:id="@+id/register_button"
        style="@style/ButtonGreen"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:text="@string/register"/>


</RelativeLayout>

</LinearLayout>